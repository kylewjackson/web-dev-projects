<% include ./partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">New Blog Post</div>
	<form class="ui form" action="/blogs" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" placeholder="title" required>
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" placeholder="image" required>
		</div>
		<div class="field">
			<label>Post Body</label>
			<textarea name="blog[body]" required></textarea>
		</div>
		<div class="field">
			<input type="submit" class="ui blue basic button big">
		</div>
	</form>
</div>

<% include ./partials/footer %>